<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/adpter_editor_baralho"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@color/common_google_signin_btn_text_light_focused">

    <TextView
        android:id="@+id/edb_txt_frente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="edb_txt_frente"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/edb_txt_verso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="edb_txt_verso"
        android:textColor="@color/white" />
</LinearLayout>